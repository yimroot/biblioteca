<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vistas LIBRO -->
        <record id="view_biblioteca_libro_list" model="ir.ui.view">
            <field name="name">biblioteca libro list</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <list>
                    <field name="firstname"/>
                    <field name="value"/>
                    <field name="value2"/>
                </list>
            </field>
        </record>

        <record id="view_biblioteca_libro_form" model="ir.ui.view">
            <field name="name">biblioteca libro form</field>
            <field name="model">biblioteca.libro</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="isbn"/>
                        <button name="buscar_libro_por_isbn" string="Buscar por ISBN" type="object" class="btn-primary"/>
                    </group>
                    <group>
                        <field name="firstname"/>
                        <field name="autor"/>
                        <field name="description"/>
                        <field name="value"/>
                        <field name="value2"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="biblioteca_libro_action_window">
            <field name="name">biblioteca libro window</field>
            <field name="res_model">biblioteca.libro</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menú de Libro (dentro del menú principal Biblioteca) -->
        <menuitem name="Libros" id="biblioteca.libro" parent="biblioteca_menu" action="biblioteca_libro_action_window"/>
    </data>
</odoo>