<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_biblioteca_reserva_list" model="ir.ui.view">
            <field name="name">biblioteca reserva list</field>
            <field name="model">biblioteca.reserva</field>
            <field name="arch" type="xml">
                <list create="false" edit="false" delete="true" default_group_by="libro_id">
                    <field name="codigo"/>
                    <field name="nombre_libro"/>
                    <field name="cantidad"/>
                    <field name="ejemplares_str"/>
                </list>
            </field>
        </record>
        <record id="view_biblioteca_reserva_form" model="ir.ui.view">
            <field name="name">biblioteca reserva form</field>
            <field name="model">biblioteca.reserva</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="true">
                    <group>
                        <field name="codigo" readonly="1"/>
                        <field name="libro_id" readonly="1"/>
                        <field name="nombre_libro" readonly="1"/>
                        <field name="descripcion_libro" readonly="1"/>
                        <field name="isbn_libro" readonly="1"/>
                        <field name="cantidad" readonly="1"/>
                        <field name="ejemplares_str" readonly="1"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="biblioteca_reserva_action_window">
            <field name="name">biblioteca reserva window</field>
            <field name="res_model">biblioteca.reserva</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem name="Reservas" id="biblioteca.reserva" parent="biblioteca_menu" action="biblioteca_reserva_action_window"/>
    </data>
</odoo>
