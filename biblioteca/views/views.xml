<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="view_biblioteca_libro_list">
      <field name="name">biblioteca libro list</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="value"/>
          <field name="value2"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="view_biblioteca_libro_form">
      <field name="name">biblioteca libro form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="firstname"/>
            <field name="autor"/>
            <field name="value"/>
            <field name="value2"/>
            <field name="description"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_biblioteca_autor_list">
      <field name="name">biblioteca autor list</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="libros_autor"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_autor_form">
      <field name="name">biblioteca autor form</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="firstname"/>
            <field name="lastname"/>
             <field name="libros_autor"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_biblioteca_usuario_list">
      <field name="name">biblioteca usuario list</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="email"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="view_biblioteca_usuario_form">
      <field name="name">biblioteca usuario form</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="firstname"/>
            <field name="lastname"/>
            <field name="email"/>
            <field name="telefono"/>
          </group>
        </form>
      </field>
    </record>

    <record model ="ir.ui.view" id="biblioteca_multa_list">
      <field name ="name">biblioteca multa list</field>
      <field name ="model">biblioteca.multa</field>
      <field name ="arch" type="xml">
        <list>
          <field name="codigo"/>
          <field name="usuario"/>
          <field name="monto"/>
          <field name="motivo"/>
          <field name="pago"/>
        </list>
      </field>
    </record>

    <record model ="ir.ui.view" id="biblioteca_multa_form">
      <field name ="name">biblioteca multa form</field>
      <field name ="model">biblioteca.multa</field>
      <field name ="arch" type="xml">
        <form>
          <group>
          <field name="codigo"/>
          <field name="usuario"/>
          <field name="monto"/>
          <field name="motivo"/>
          <field name="pago"/>
          </group>
        </form>
      </field>
    </record>
    
    <record model ="ir.ui.view" id="biblioteca_prestamo_list">
      <field name ="name">biblioteca prestamo list</field>
      <field name ="model">biblioteca.prestamo</field>
      <field name ="arch" type="xml">
        <list>
          <field name="usuario"/>
          <field name="libro"/>
          <field name="fecha_prestamo"/>
          <field name="fecha_devolucion"/>
          <field name="estado"/>
          <field name="multa_bol"/>
          <field name="multa"/>
          <field name="fecha_max"/>
        </list>
      </field>
    </record>


    


    <record model ="ir.ui.view" id="biblioteca_prestamo_form">
      <field name ="name">biblioteca prestamo form</field>
      <field name ="model">biblioteca.prestamo</field>
      <field name ="arch" type="xml">
        <form>
          <header>
            <button string="Prestar" type="object" name="generar_prestamo"
            invisible="estado in ('p','d','m')"/>
            <field name="estado" widget='statusbar'/>
          </header>
              <group>
              <label for="name" string="Codigo de prestamo"/>
              <field name="name" readonly="estado in ('p','d','m')" nolabel="1"/>
              <field name="usuario" readonly="estado in ('p','d','m')"/>
              <field name="libro" readonly="estado in ('p','d','m')"/>
              <field name="fecha_prestamo" readonly="estado in ('p','d','m')" />
              <field name="fecha_devolucion" readonly="estado in ('p','d','m')" required="estado in ('p','m')"/>
              <field name="estado" readonly="estado in ('p','d','m')"/>
              <field name="multa_bol" readonly="estado in ('p','d','m')"/>
              <field name="multa" readonly="estado in ('p','d','m')" invisible="multa_bol ==False"/>
              <field name="fecha_max" readonly="estado in ('p','d','m')"/>
              <field name="personal" readonly="estado in ('p','d','m')"/>
              </group>
        </form>
      </field>
    </record>
  
    
    
    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="biblioteca_libro_action_window">
      <field name="name">biblioteca libro window</field>
      <field name="res_model">biblioteca.libro</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_autor_action_window">
      <field name="name">biblioteca autores</field>
      <field name="res_model">biblioteca.autor</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_usuario_action_window">
      <field name="name">biblioteca usuarios</field>
      <field name="res_model">biblioteca.usuario</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_multa_action_window">
      <field name="name">biblioteca multas</field>
      <field name="res_model">biblioteca.multa</field>
      <field name="view_mode">list,form</field>
    </record>


    <record model="ir.actions.act_window" id="biblioteca_prestamo_action_window">
      <field name="name">biblioteca prestamo</field>
      <field name="res_model">biblioteca.prestamo</field>
      <field name="view_mode">list,form</field>
    </record>



    
