<odoo>
  <data>

    <!-- Vistas LIBRO -->
    <record id="view_biblioteca_libro_list" model="ir.ui.view">
      <field name="name">biblioteca libro list</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="value"/>
          <field name="value2"/>
        </list>
      </field>
    </record>

    <record id="view_biblioteca_libro_form" model="ir.ui.view">
      <field name="name">biblioteca libro form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="isbn"/>
            <button name="buscar_libro_por_isbn" string="Buscar por ISBN" type="object" class="btn-primary"/>
          </group>
          <group>
            <field name="firstname"/>
            <field name="autor"/>
            <field name="description"/>
            <field name="value"/>
            <field name="value2"/>
          </group>
        </form>
      </field>
    </record>

    <!-- Vistas AUTOR -->
    <record id="view_biblioteca_autor_list" model="ir.ui.view">
      <field name="name">biblioteca autor list</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="libros_autor"/>
        </list>
      </field>
    </record>


    <record id="biblioteca_autor_form" model="ir.ui.view">
      <field name="name">biblioteca autor form</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="firstname"/>
            <field name="lastname"/>
            <field name="libros_autor"/>
          </group>
        </form>
      </field>
    </record>


    <!-- Vistas USUARIO -->
    <record id="view_biblioteca_usuario_list" model="ir.ui.view">
      <field name="name">biblioteca usuario list</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="email"/>
        </list>
      </field>
    </record>


    <record id="view_biblioteca_usuario_form" model="ir.ui.view">
      <field name="name">biblioteca usuario form</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="firstname"/>
            <field name="lastname"/>
            <field name="email"/>
            <field name="telefono"/>
            <field name="cedula"/>
          </group>
        </form>
      </field>
    </record>


    <!-- Vistas MULTA -->
    <record id="biblioteca_multa_list" model="ir.ui.view">
      <field name="name">biblioteca multa list</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <list>
          <field name="codigo"/>
          <field name="usuario"/>
          <field name="monto"/>
          <field name="pago"/>
        </list>
      </field>
    </record>


   <record id="biblioteca_multa_form" model="ir.ui.view">
  <field name="name">biblioteca multa form</field>
  <field name="model">biblioteca.multa</field>
  <field name="arch" type="xml">
    <form string="Multa de biblioteca">
      <header>
        <button string="Pagar" type="object" name="pagar_multa"/>
      </header>
      <sheet> <group>
          <field name="codigo" readonly="1"/>
          <field name="usuario" readonly="1"/>
          <field name="monto" readonly="1"/>
          <field name="pago" readonly="1"/>
        </group>
      </sheet>
      </form>
  </field>
</record>


    
    <!-- Vistas PRESTAMO -->
    <record id="biblioteca_prestamo_list" model="ir.ui.view">
      <field name="name">biblioteca prestamo list</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <list>
          <field name="usuario"/>
          <field name="libro"/>
          <field name="fecha_prestamo"/>
          <field name="fecha_devolucion"/>
          <field name="estado"/>
          <field name="multa_bol"/>
          <field name="multa"/>
          <field name="fecha_max"/>
          <field name="motivo_multa"/>
        </list>
      </field>
    </record>
  
    <record id="biblioteca_prestamo_form" model="ir.ui.view">
  <field name="name">biblioteca prestamo form</field>
  <field name="model">biblioteca.prestamo</field>
  <field name="arch" type="xml">
    <form>
      <header>
        <field name="estado" widget="statusbar"/>
      </header>
      <group string="Datos de Préstamo">
        <field name="usuario" options="{'no_create': true }"/>
        <field name="libro" />
        <field name="fecha_prestamo"/>
        <field name="fecha_max" required="1"/>
        <button string="Prestar" type="object" name="generar_prestamo"/>
        <button string="Devolución" type="object" name="devolver_libro" class="btn-success"/>
      </group>
      <group string="Multa">
        <field name="fecha_devolucion"/>
        <field name="motivo_multa"/>
        <field name="multa_bol"/>
        <field name="multa"/>
        <button string="Generar Multa" type="object" name="generar_multa"/>
      </group>
      <group>
        <field name="personal" readonly="1"/>
        <field name="name" readonly="1" nolabel="1"/>
      </group>
    </form>
  </field>
</record>




    <record model="ir.actions.act_window" id="biblioteca_libro_action_window">
      <field name="name">biblioteca libro window</field>
      <field name="res_model">biblioteca.libro</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_autor_action_window">
      <field name="name">biblioteca autores</field>
      <field name="res_model">biblioteca.autor</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_usuario_action_window">
      <field name="name">biblioteca usuarios</field>
      <field name="res_model">biblioteca.usuario</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_multa_action_window">

      <field name="name">biblioteca multas</field>
      <field name="res_model">biblioteca.multa</field>
      <field name="view_mode">list,form</field>
    </record>



    <record model="ir.actions.act_window" id="biblioteca_prestamo_action_window">
      <field name="name">biblioteca prestamo</field>
      <field name="res_model">biblioteca.prestamo</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- MENUS -->
    <menuitem name="Biblioteca" id="biblioteca_menu"/>
    <menuitem name="Libro menu" id="biblioteca.libro" parent="biblioteca_menu" action="biblioteca_libro_action_window"/>
    <menuitem name="Multa menu" id="biblioteca.multa" parent="biblioteca_menu" action="biblioteca_multa_action_window"/>
    <menuitem name="Autor menu" id="biblioteca.autor" parent="biblioteca_menu" action="biblioteca_autor_action_window"/>
    <menuitem name="Usuario menu" id="biblioteca.usuario" parent="biblioteca_menu" action="biblioteca_usuario_action_window"/>
    <menuitem name="menu prestamos" id="biblioteca.prestamo" parent="biblioteca_menu" action="biblioteca_prestamo_action_window"/>
  </data>
</odoo>

